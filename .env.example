# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://mongo:27017/your_database_name
REDIS_URL=redis://redis:6379

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_min_64_characters_recommended_for_security
JWT_EXPIRE=7d
REFRESH_TOKEN_EXPIRE=30d

# MongoDB Credentials
MONGO_ROOT_USER=your_mongo_admin_username
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_INITDB_ROOT_USERNAME=your_mongo_admin_username
MONGO_INITDB_ROOT_PASSWORD=your_secure_mongo_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_APP_NAME=Your_App_Name
REACT_APP_VERSION=1.0.0

# File Upload Settings
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS & Client Configuration
CLIENT_URL=http://localhost:3000

# Cache Configuration
CACHE_TTL=3600

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here

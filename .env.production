# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://mongo:27017/carbonytics_prod
REDIS_URL=redis://redis:6379

# Authentication & Security (GENERATE STRONG VALUES)
JWT_SECRET=GENERATE_64_CHAR_SECRET_HERE_REPLACE_THIS_VALUE
JWT_EXPIRE=7d
REFRESH_TOKEN_EXPIRE=30d

# Database Security (GENERATE STRONG PASSWORDS)
MONGO_ROOT_USER=carbonytics_admin
MONGO_ROOT_PASSWORD=GENERATE_STRONG_MONGO_PASSWORD_HERE
REDIS_PASSWORD=GENERATE_STRONG_REDIS_PASSWORD_HERE

# External APIs
AIRPORT_API_KEY=https://airportgap.com/api/airports/distance
EMISSION_FACTORS_API_KEY=your-actual-emission-factors-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@carbonytics.com
SMTP_PASS=your-actual-email-app-password

# Frontend Configuration
REACT_APP_API_URL=https://api.carbonytics.com
REACT_APP_APP_NAME=Carbonytics
REACT_APP_VERSION=1.0.0

# Production Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CLIENT_URL=https://carbonytics.com
CACHE_TTL=3600

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/carbonytics.crt
SSL_KEY_PATH=/etc/nginx/ssl/carbonytics.key

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
HEALTH_CHECK_ENDPOINT=/health

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_UPLOAD_ENABLED=false

# Monitoring Passwords
GRAFANA_PASSWORD=GENERATE_STRONG_GRAFANA_PASSWORD_HERE